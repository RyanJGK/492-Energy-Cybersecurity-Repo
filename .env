# Local defaults for simulation
ENVIRONMENT=dev
READ_ONLY_MODE=true
ENABLE_SIMULATION=true

# Optional integrations (disabled by default)
ENABLE_DB=false
DB_DSN=postgresql://postgres:postgres@localhost:5432/telemetry

ENABLE_MQTT=false
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_TLS=false

ENABLE_RAY=false
OPA_URL=http://localhost:8181/v1/data/control/allow
ALLOWED_ACTIONS=["ingest","simulate"]
